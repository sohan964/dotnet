@model PassDataViewToController.Models.Employee
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <section>
            <h3>Passing data using patemeter:</h3>
            @using (Html.BeginForm("PostUsingPerimiter", "Home"))
            {
                <input type="text" name="FirstName" /><br /><br />
                <input type="text" name="LastName" /><br />
                <br />
                <input type="submit" value="Click me" />
            }
        </section>
        <section>
            <h3>Passing data using request:</h3>
            @using (Html.BeginForm("PostUsingRequest", "Home"))
            {
                <input type="text" name="FirstName" /><br />
                <input type="text" name="LastName" /><br />
                <br />
                <input type="submit" value="OK" />

            }
        </section>
        <hr />
        <section>
            <h3>Passing data using FormCollection:</h3>
            @using (Html.BeginForm("PostUsingFormCollection", "Home"))
            {
                <input type="text" name="FirstName" /><br />
                <input type="text" name="LastName" /><br />
                <br />
                <input type="submit" value="OKEY" />
            }
        </section>
        <section>
            <h3>Passing Data using using Stronglybinding: </h3>
            @using (Html.BeginForm("PostUsingBinding", "Home"))
            {
                @Html.TextBoxFor(x=>x.FirstName) <br />
                @Html.TextBoxFor(x=>x.LastName) <br />
                <input type="submit" value="enter" />
            }

        </section>
    </div>
</body>
</html>
